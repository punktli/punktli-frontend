<TopBar>
  <LinkTo @route="settings"><img src="/assets/icons/arrow-left.svg" alt="" width="24" height="24"></LinkTo>
</TopBar>
<h1 class="main">Your categories</h1>
<div class="row">
  {{#each this.activeCategories as |category|}}
  <div class="col-lg-4 col-sm-6 mb-4">
    <div class="row d-flex">
      <div class="flex-grow-1 col">
        <h3><span class="category-color rounded-circle d-inline-block mr-1" style="background-color: {{category.color}}"></span>{{category.name}}</h3>
        <div class="small">{{category.duration}} minutes</div>
      </div>
      <div class="align-self-center pr-3">
        <LinkTo @route="settings.categories.edit" @model={{category}}>Edit</LinkTo>
      </div>
    </div>
  </div>
  {{/each}}
</div>
<div class="row">
  <div class="col my-4">
    <LinkTo @route="settings.categories.new" class="btn btn-block-sm btn-tertiary">Add a new category</LinkTo>
  </div>
</div>