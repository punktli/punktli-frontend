<div class="container container-sidebar mx-auto">
  <TopBar>
    <div>
      <LinkTo @route="event.new.wizard"><img src="/assets/icons/arrow-left.svg" alt="" width="24" height="24">
      </LinkTo>
    </div>
    <div>
      <LinkTo @route="patients.new" @query={{hash returnURL="event.new.patient"}}><img src="/assets/icons/plus.svg" alt="" width="24" height="24"></LinkTo>
    </div>
  </TopBar>
  <div class="d-flex align-items-center justify-content-between">
    <div>
      <h1 class="main">Select a patient</h1>
    </div>
    <div class="d-none d-lg-block">
      <LinkTo @route="patients.new" @query={{hash returnURL="event.new.patient"}} class="btn btn-secondary">Create a patient</LinkTo>
    </div>
  </div>
  <div class="list-group">
  {{#each patients as |patient|}}
    <PatientCard @patient={{patient}} href="#" onclick={{action "selectPatient" patient}}></PatientCard>
  {{else}}
    No patient yet, <LinkTo @route="patients.new">create your first patient</LinkTo>.
  {{/each}}
  </div>
</div>