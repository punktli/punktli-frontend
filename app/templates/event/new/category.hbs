<div class="container container-sidebar mx-auto">
  <TopBar>
    <div>
      <LinkTo @route="event.new.wizard"><img src="/assets/icons/arrow-left.svg" alt="" width="24" height="24">
      </LinkTo>
    </div>
    <div>
      <LinkTo @route="settings.categories" @query={{hash returnURL="event.new.category"}}><img src="/assets/icons/plus.svg" alt="" width="24" height="24"></LinkTo>
    </div>
  </TopBar>
  <Breadcrumb>
    <li class="breadcrumb-item"><LinkTo @route="event.new.wizard">Back to your event</LinkTo></li>
  </Breadcrumb>
  <div class="d-flex align-items-center justify-content-between">
    <div>
      <h1 class="main-breadcrumb">Select a category</h1>
    </div>
    <div class="d-none d-lg-block">
      <LinkTo @route="settings.categories" @query={{hash returnURL="event.new.category"}} class="btn btn-secondary">Manage your categories</LinkTo>
    </div>
  </div>
  <div class="list-group">
  {{#each categories as |category|}}
    <CategoryCard @category={{category}} href="#" onclick={{action "selectCategory" category}}></CategoryCard>
  {{else}}
    No category yet, <LinkTo @route="settings.categories">go to your settings</LinkTo>.
  {{/each}}
  </div>
</div>