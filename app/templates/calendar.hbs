<div class="container container-sidebar mx-auto">
  <TopBar>
    <div>
      {{!-- <LinkTo @route="patients"><img src="/assets/icons/arrow-left.svg" alt="" width="24" height="24">
      </LinkTo> --}}
    </div>
    <div>
      <LinkTo @route="event.new.patient"><img src="/assets/icons/plus.svg" alt="" width="24" height="24"></LinkTo>
    </div>
  </TopBar>
  <div class="d-flex align-items-center justify-content-between">
    <div>
      <h1 class="main">Today</h1>
    </div>
    <div class="d-none d-lg-block">
      <LinkTo @route="event.new.patient" class="btn btn-primary">New event</LinkTo>
    </div>
  </div>
  {{#each this.model as |event|}}
    <div class="mb-3">
      <LinkTo @route="event.details" @model={{event}}>{{event.name}}</LinkTo><br/>
      {{moment-format event.startTime 'DD.MM.YYYY HH:mm'}} - {{moment-format event.endTime 'DD.MM.YYYY HH:mm'}}
    </div>
  {{else}}
    <p>Welcome to your calendar my friend</p>
  {{/each}}
</div>