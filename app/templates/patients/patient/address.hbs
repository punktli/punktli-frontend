<div class="container container-sidebar mx-auto">
  <TopBar>
    <div>
      <LinkTo @route="patients.patient" @model={{this.model}}><img src="/assets/icons/x.svg" alt="" width="24"
          height="24"></LinkTo>
    </div>
  </TopBar>
  <Breadcrumb>
      <li class="breadcrumb-item"><LinkTo @route="patients">All patients</LinkTo></li>
      <li class="breadcrumb-item"><LinkTo @route="patients.patient" @model={{this.model}}>{{this.model.fullName}}</LinkTo></li>
      <li class="breadcrumb-item active" aria-current="page">Edit address</li>
  </Breadcrumb>
