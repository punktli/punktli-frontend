<BsNavbar
  @type="light"
  @backgroundColor="white"
  @collapsed={{true}}
  @onCollapse={{action (mut collapsed) true}}
  @onExpand={{action (mut collapsed) false}}
  class="d-none d-md-flex" as |navbar|>
  <div class="navbar-header">
    {{navbar.toggle}}
    <LinkTo @route="index" class="navbar-brand">
      <img src="/assets/punktli-logo.svg" width="212" height="30" alt="">
    </LinkTo>
  </div>
  <navbar.content>
    <navbar.nav class="mr-auto" as |nav|>
      <nav.item @linkTo="calendar">Calendar</nav.item>
      <nav.item @linkTo="patients">Patients</nav.item>
      {{!-- <nav.item @linkTo="index">Navbars</nav.item>
      <nav.dropdown as |dd|>
        <dd.toggle>Dropdown <span class="caret"></span></dd.toggle>
        <dd.menu as |ddm|>
          <ddm.item>
            {{#ddm.link-to "index"}}Home{{/ddm.link-to}}
          </ddm.item>
          <ddm.item>
            {{#ddm.link-to "demo.navbars"}}Navbars{{/ddm.link-to}}
          </ddm.item>
        </dd.menu>
      </nav.dropdown> --}}
    </navbar.nav>
    <navbar.nav as |nav|>
      <nav.dropdown as |dd|>
        <dd.toggle>{{currentUser.user.fullName}} <span class="caret"></span></dd.toggle>
        <dd.menu as |ddm|>
          <ddm.item>
            {{#ddm.link-to "settings.categories"}}Settings{{/ddm.link-to}}
          </ddm.item>
          <ddm.item>
            {{#ddm.link-to "logout"}}Log out{{/ddm.link-to}}
          </ddm.item>
        </dd.menu>
      </nav.dropdown>
    </navbar.nav>
  </navbar.content>
</BsNavbar>